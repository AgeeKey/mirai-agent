# Mirai Agent Production Environment Configuration
# ==============================================

# Core Application Settings
DEBUG=false
ENV=production
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-production-key-change-this

# Domain Configuration
TRADING_DOMAIN=aimirai.online
SERVICES_DOMAIN=aimirai.info

# Database Configuration (PostgreSQL)
POSTGRES_DB=mirai_production
POSTGRES_USER=mirai_user
POSTGRES_PASSWORD=secure_postgres_password_change_this
POSTGRES_ADMIN_PASSWORD=secure_admin_password_change_this
POSTGRES_TRADING_PASSWORD=secure_trading_password_change_this
POSTGRES_SERVICES_PASSWORD=secure_services_password_change_this
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mirai_user:secure_postgres_password_change_this@postgres:5432/mirai_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_URL=redis://:secure_redis_password_change_this@redis:6379/0

# API Keys (заполните реальными ключами)
OPENAI_API_KEY=your-openai-api-key
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
BINANCE_TESTNET=false

# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID_ADMIN=your-telegram-chat-id

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this
CORS_ORIGINS=https://aimirai.online,https://aimirai.info
RATE_LIMIT_PER_MINUTE=100

# SSL Configuration
SSL_EMAIL=your-email@domain.com
LETSENCRYPT_STAGING=false

# Monitoring & Logging
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=secure_grafana_password_change_this
FLUENTD_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=mirai-backups
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Microservices Configuration
AI_ENGINE_URL=http://mirai-ai:8010
PORTFOLIO_URL=http://mirai-portfolio:8011
NOTIFICATIONS_URL=http://mirai-notifications:8012
ANALYTICS_URL=http://mirai-analytics:8013

# Trading Configuration
DEFAULT_TRADING_MODE=dry_run
MAX_POSITION_SIZE=1000
RISK_LEVEL=medium
STOP_LOSS_PERCENTAGE=5.0
TAKE_PROFIT_PERCENTAGE=10.0

# Services Configuration
MAX_CONCURRENT_REQUESTS=100
CACHE_TTL_SECONDS=3600
API_RATE_LIMIT=1000